package demo;

public class D {
	/*
	 * IV - geteri i seteri
	 * 
	 * uobičajeno je da su metodi javni, a atributi privatni
	 * kako bi privatni atributi bili dostupni objektima klase koriste se 
	 * prilagođeni metodi geteri i seteri
	 * ovi metodi, po nepisanom pravilu u svom nazivu sadrže i naziv atributa na koji se odnose
	 * 
	 */
	
	private String ime;
	
	/* 
	 * seter = metod koji se koristi za ažuriranje atributa - setAtribut
	*/
	public void setIme(String s) {
		ime = s;
	}
	
	/*
	 * geter = metod koji se koristi za čitanje vrednosti atributa - getAtribut
	 */
	public String getIme() {
		return ime;
	}
	
	// običan javni metod
	public void info() {
		System.out.println("Zdravo, " + ime + "! Drago mi je da smo se upoznali. Ja sam metod demo klase B.");
	}

}
