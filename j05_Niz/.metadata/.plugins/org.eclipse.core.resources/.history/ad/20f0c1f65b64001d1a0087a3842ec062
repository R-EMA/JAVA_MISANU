		System.out.print("Unesite broj 훾lanova niza: ");
		int n = sc.nextInt();
		int niz[] = new int[n];
		float y;

		// punjenje niza 훾lan po 훾lan
		System.out.println("Unesite " + n + " prirodnih brojeva.");
		for (int i = 0; i < n; i++) {
			System.out.print("niz[" + i + "] = ");
			niz[i] = sc.nextInt();
		}

		// obrada i prikaz rezultata
		for (int i = 0; i < n; i++) {
			if (niz[i] % 2 == 0)
				y = 1 / niz[i];
			else
				y = niz[i] * niz[i];
