package enumi;

public class MainBoje {
	
	public static void main(String[] args) {
	
		Boje plava = Boje.PLAVA;
		Boje crvena = Boje.CRVENA;
		Boje bela = Boje.BELA;
		
		System.out.println(plava);
		
		
		//iteracija
		for(Boje b : Boje.values()) {
			System.out.print(b + " ");
		}
		System.out.println("");
		//primena metoda nad enum tipom, ugrađeni metodi
		System.out.println("Plava Vs Bela (jednako): " + plava.equals(bela));
		System.out.println("Plava Vs Bela (poređenje): " + plava.compareTo(bela));
		System.out.println("Plava Vs Crvena (poređenje): " + plava.compareTo(crvena));

		
		
		//metode za enum tip
	}

}
